html
    head
        meta(charset='UTF-8')
        meta(name='viewport' content='width=device-width, initial-scale=1.0')
        link(rel='stylesheet', href='css/main.css')
        link(rel='stylesheet', href='css/dark-mode.css' id='darkMode' disabled)
        link(rel='stylesheet', href='css/fontawesome.css')
        title= title
        body
            #creater.note
                .createHeader.header(hidden contenteditable='true' placeholder='Enter note header' role='textbox' tabindex='0')
                #createBtns
                    .createNote.noteText(hidden=false contenteditable='true' placeholder='Add quick note...' role='textbox')
                    .createList.far.fa-list-ul(hidden=false role='button' title='Create List')
                .listCont(hidden)                   
                    .listEl
                        .checkEl
                        .textEl(contenteditable='true' placeholder='New TODO' role='textbox' aria-label='newTodo')
                        .delEl

                #controls.controls(hidden)
                    .toolbar
                        .toolbarBtn.setTime(aria-label='time')
                    div
                        .defaultBtn.add Add
                        .defaultBtn.cancel Cancel
            #switchMode.fas.fa-tools

            include notes

        script(src='js/main.js')
        script(src='js/dark-mode.js')
        script(src='js/data.js')
            